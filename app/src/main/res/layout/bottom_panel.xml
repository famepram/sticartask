    <RelativeLayout
        android:id="@+id/panel_bottom_drawer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_above="@+id/content_bottom_panel"
            android:background="@drawable/bg_half_circle"
            android:layout_centerHorizontal="true"
            android:layout_width="64dp"
            android:layout_height="32dp">
            <Button
                android:id="@+id/btn_close_bottom_drawer"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_keyboard_arrow_down"
                android:layout_width="28dp"
                android:layout_height="20dp" />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/content_bottom_panel"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:background="@color/green">
            <RelativeLayout
                android:layout_centerHorizontal="true"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/btn_circle_outlined_green">
                <Button
                    android:layout_centerInParent="true"
                    android:background="@drawable/ic_clock_sand"
                    android:layout_width="20dp"
                    android:layout_height="30dp" />
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Status Is"
                android:textColor="@color/white"
                android:textSize="16sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Request To Join"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="28sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello, Please Join Your Advertise Now!"
                android:textColor="@color/white"
                android:textSize="16sp"/>
            <Button
                android:layout_marginTop="12dp"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/btn_circle_outlined_green_md"
                android:textAlignment="center"
                android:text="Join!"
                android:textStyle="bold"
                android:textSize="24sp"
                android:textColor="@color/greydark"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>